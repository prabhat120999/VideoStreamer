<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:cardElevation="10dp" android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" android:layout_marginBottom="10dp" android:id="@+id/video">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/item_image" android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>