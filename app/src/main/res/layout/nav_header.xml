<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorApp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:background="@drawable/rounded_text"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/header_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header_name" android:layout_weight="1"
            android:layout_marginLeft="20dp" android:textSize="16sp" android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>