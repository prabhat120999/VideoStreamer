<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" android:background="@android:color/holo_orange_light">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp" app:srcCompat="@drawable/signup_photo"
        android:id="@+id/register_image" android:scaleType="centerCrop"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_email" android:layout_below="@id/register_image"
        android:drawableStart="@drawable/email" android:hint="Email " android:layout_marginTop="25dp"
        android:layout_marginStart="17dp" android:layout_marginEnd="17dp"
        android:layout_marginBottom="25dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_password" android:layout_below="@id/register_email"
        android:drawableStart="@drawable/password" android:hint="Password " android:layout_marginTop="10dp"
        android:layout_marginStart="17dp" android:layout_marginEnd="17dp"
        />

    <Button
        android:text="Create Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/register_btn"
        android:textAllCaps="false"
        android:layout_below="@id/register_password" android:layout_marginTop="20dp"
        android:layout_marginLeft="19dp" android:layout_marginRight="19dp" android:textSize="24sp"
        android:background="@color/colorPrimary"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"

        android:layout_below="@id/register_btn" android:id="@+id/already_have_account_link"
        android:layout_marginTop="15dp" android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp" android:text="Already have an Account" android:textAlignment="center"
        android:textSize="18sp" android:textStyle="bold"/>


</RelativeLayout>